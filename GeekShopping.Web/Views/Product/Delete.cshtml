@model ProductModel

<form asp-controller="Product" asp-action="Delete">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Excluir Produto</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;">

                </label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size:20px;">
                </label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Price" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size:20px;">
                </label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="ImageURL" class="control-label pt-2" style="font-size:20px;">
                </label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="ImageURL" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-controller="Product" asp-action="Index" class="btn-primary btn form-control">Voltar</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>
