@model IEnumerable<ProductModel>

<br/>
<br/>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Produtos</h1>
        </div>

        <div class="col text-end pt-1">
            <a asp-action="Create" asp-controller="Product" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Criar Novo Produto
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Preço</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>
                        <a asp-controller="Product" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Product" class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>

                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
